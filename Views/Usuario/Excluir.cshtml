@model ProjetoMVC.Models.Usuario
@{
    ViewData["Title"] = "Excluisão de Usuario";
}
<div class="PagEditar">
  <div class="Editar">
            <div class="title" style="text-align:center;">
                <h1 style="color:red;">Deseja Realmente Exluir esse usuário?</h1>
            </div>

    <div class="row">
        <form asp-action="Excluir">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input type="text" class="form-control" placeholder="Seu Nome" asp-for="Nome"/>
            </div>
             <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input type="email" class="form-control" placeholder="Seu email" asp-for="Email"/>
            </div>
             <div class="form-group">
                 <label asp-for="Senha" class="control-label"></label>
                 <input type="text" class="form-control" placeholder="Senha" asp-for="Senha"/>
            </div>
            <br>
            <div style="text-align:center;" class="d-grid gap-2">
                <input type="submit" value="Excluir" class="btn btn-danger"/>
                <a type="button" asp-controller="Usuario" asp-action="List" class="btn btn-primary">Cancelar</a>
            </div>
        </form>
    </div>
  </div>
</div>